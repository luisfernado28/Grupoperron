<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    tools:context="com.example.luisfernando.superhipermegaperron.MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:id="@+id/TV_BUTTON"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/tv"
                    android:text="@string/lbl1"
                    android:gravity="right|bottom"
                    android:textColor="#ffffff"
                    />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/telefonos"
                    android:id="@+id/PHONES_BUTTON"
                    android:padding="10dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/telefonos"
                    android:gravity="right|bottom"
                    android:text="@string/lbl2"
                    android:textColor="#ffffff"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/controles"
                android:id="@+id/GAMES_BUTTON"
                android:padding="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"

                android:scaleType="fitCenter"
                android:text="@string/lbl3"
                android:gravity="right|bottom"
                android:textColor="#ffffff"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/HHITEMS_BUTTON"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.5"
                android:background="@drawable/electrodomesticos"
                android:gravity="right|bottom"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/electrodomesticos"
                android:text="@string/lbl4"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:background="@drawable/pc"
                android:id="@+id/PC_BUTTON"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:gravity="right|bottom"
                android:textColor="#ffffff"
                android:text="@string/lbl5"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:background="@drawable/logout"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:id="@+id/LOG_OUT_BUTTON"
                android:padding="0dp"
                android:scaleType="fitCenter" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="com.example.luisfernando.superhipermegaperron.MainActivity">

    <Button
        android:text="Limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegistrarse"
        android:layout_toEndOf="@+id/btnRegistrarse"
        android:id="@+id/btnlimpiar" />

    <Button
        android:text="Registrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegistrarse"
        android:minHeight="34dp"
        android:minWidth="68dip"
        style="@android:style/Widget.Button.Small"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnEnviar"
        android:layout_marginBottom="64dp" />

    <Button
        android:text="Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnviar"
        android:layout_alignTop="@+id/btnlimpiar"
        android:layout_toEndOf="@+id/lblUsuario" />

    <TextView
        android:text="Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblUsuario"
        android:layout_alignBottom="@+id/txtUsuario"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblPassword"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_below="@+id/lblPassword"
        android:layout_toStartOf="@+id/btnlimpiar"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUsuario"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/lblPassword"
        android:layout_alignParentStart="true" />

</RelativeLayout>
